{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "types": ["jest"],
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types", "./src/typings"],
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src"]
}
